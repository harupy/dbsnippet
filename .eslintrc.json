{
  "extends": ["airbnb", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "webextensions": true
  },
  "rules": {
    "arrow-parens": "off",
    "no-console": ["error", { "allow": ["log", "warn", "error"] }],
    "no-template-curly-in-string": 0,
    "react/prop-types": 0,
    "react/jsx-filename-extension": 0,
    "react/self-closing-comp": 0
  }
}
