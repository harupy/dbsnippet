{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "webextensions": true,
    "node": true
  },
  "rules": {
    "no-console": ["error", { "allow": ["log", "warn", "error"] }],
    "react/prop-types": 0
  }
}
