{
  "compilerOptions": {
    "outDir": "../build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "es2019"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "webpack.config.js", "docs"],
  "types": ["typePatches"]
}
