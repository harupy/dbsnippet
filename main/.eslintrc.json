{
  "extends": ["plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "webextensions": true
  },
  "rules": {
    "arrow-parens": "off",
    "no-console": ["error", { "allow": ["log", "warn", "error"] }]
  }
}
